<!-- Import the header section -->
<%- include("./header"); %>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <!-- Loops through the items array -->
    <% newListItems.forEach(listItems => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="box" value="<%= listItems._id %>" onchange="this.form.submit()">
                <!-- Shows the newly added item in the array -->
                <p><%= listItems.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
    <% }) %>

